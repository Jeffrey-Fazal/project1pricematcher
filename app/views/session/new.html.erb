<h1>Log in</h1>

<p>
    <%= flash[:error] %>
</p>

<%= form_tag login_path do %>
    <%= label_tag :email, nil, :class => 'form-label' %>
    <%= email_field_tag :email, nil, :class => 'form-label' %>

    <%= label_tag :password, nil, :class => 'form-label' %>
    <%= password_field_tag :password, nil, :class => 'form-label' %>

    <%= submit_tag "Sign in", :class => 'btn btn-success btn-sm' %>
<% end %>